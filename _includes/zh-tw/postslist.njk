<div class="postlist">
{% for post in postslist %}
  <div class="postlist__item">
    <div class="postlist__time">
      <time datetime="{{ post.date | htmlDateString }}">{{ post.date | htmlDateString }}</time>
    </div>
    <h6 class="postlist__title">
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h6>
  </div>
{% endfor %}
</div>
